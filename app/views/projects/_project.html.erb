<div class="project">
	<div class="project-score">
		<span class="score" id="projectscore<%=project.id%>"><%=project.score%></span><br>
		<a href="javascript:vote('project',<%=project.id%>,1)"><i class="icon thumbs icon-thumbsup"></i></a>
		<a href="javascript:vote('project',<%=project.id%>,-1)"><i class="icon thumbs icon-thumbsdown"></i></a>
	</div>
	<div class="project-detail">
		<h1><%=link_to project.title, project%></h1>
		<span class="label label-<%=project.statuscolor%>"><%=project.statusdescription%></span> <span>Boletín Nº<%=link_to project.remoteid, "http://sil.senado.cl/cgi-bin/sil_proyectos.pl?"+project.remoteid%></span>
	</div>
</div>