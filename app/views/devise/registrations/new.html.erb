<h2>Registro</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-horizontal"}) do |f| %>
<div class="control-group">
	<%= f.label "Tu nombre", :class=>"control-label" %>
	<div class="controls">
		<%= f.text_field :name, :autofocus => true, :placeholder => "(o seudónimo)" %>
	</div>
</div>

<div class="control-group">
	<%= f.label :email, :class=>"control-label" %>
	<div class="controls">
		<%= f.email_field :email %>
	</div>
</div>
<div class="control-group">
	<%= f.label "Contraseña", :class=>"control-label" %>
	<div class="controls">
		<%= f.password_field :password %>
	</div>
</div>
<div class="control-group">
	<%= f.label "Confirmar contraseña", :class=>"control-label" %>
	<div class="controls">
		<%= f.password_field :password_confirmation %>
	</div>
</div>
<div class="control-group">
	<div class="controls">
		<%= f.submit "Registro", :class=>"btn" %>
	</div>
</div>
<% end %>

<%= render "devise/shared/links" %>
